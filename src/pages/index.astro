    <main></main>

    <footer></footer>
  </body>
  <script>
    // Obtenemos referencias a los elementos del DOM
    var mobileMenu = document.getElementById("mobile-menu");
    var closeButton = document.getElementById("close-button");

    // Agregamos un manejador de eventos al botón
    closeButton.addEventListener("click", function () {
      // Obtenemos el valor actual del atributo aria-modal
      var currentAriaModal = mobileMenu.getAttribute("aria-modal");

      // Cambiamos el valor del atributo aria-modal
      if (currentAriaModal === "true") {
        mobileMenu.setAttribute("aria-modal", "false");
      } else {
        mobileMenu.setAttribute("aria-modal", "true");
      }
    });
  </script>
</html>
